# Copie este arquivo para .env e configure os valores

# Database Configuration
DB_HOST=
DB_PORT=
DB_NAME=
DB_USERNAME=
DB_PASSWORD=

# JWT Security
JWT_SECRET=agrohelperSecretKeyThatShouldBeVeryLongAndSecure123456789
JWT_EXPIRATION=86400000

# Azure AI Services - Computer Vision
AZURE_VISION_ENDPOINT=https://your-region.cognitiveservices.azure.com/
AZURE_VISION_API_KEY=your_azure_vision_api_key_here

# Azure AI Services - OpenAI (Chatbot)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-35-turbo

# Weather API

OPENWEATHER_API_KEY=your_openweather_api_key_here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# File Storage
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB

# Environment
ENVIRONMENT=development
DEBUG_MODE=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# Server Configuration
SERVER_PORT=8080